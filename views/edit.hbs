<h1 class="text-secondary font-weight-bold ml-5">Edit</h1>
<div class="row">
        <div class="col-md-2"></div>
            <div class="col-md-8 col-sm-12">
                <div class="card border mt-5">
                    <div class="card-header">Edit Post</div>
                    <form action="/update/{{post._id}}" method="POST">
                        <div class="container">
                            <div class="form-group">
                              <label for="Body">Body</label>
                              <textarea class="form-control" name="body" id="Body" rows="5" placeholder="post body">{{post.description}}</textarea>
                            </div>
                            <div class="form-group">
                                    <button type="submit" class="btn btn-dark rounded-pill creat-post1"> 
                                        Edit
                                    </button>
                                </div>
                        </div>
                          </form>
                    
                 </div>
            </div>
        </div>